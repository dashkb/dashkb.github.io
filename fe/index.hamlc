:coffeescript
  moment = require 'moment'
  pages = _(@site.pages).values().filter (page) ->
    page.template == 'article' && page.index
  .sortBy (page) ->
    if d = page.releaseDate then moment(d) else _.last(page.revisions).date
  .reverse().value()

%article
  %header
    .title Writings

  .page-links
    - _.each pages, (page) =>
      .page-link
        %a{href: page.path}= page.title || page.slug
        %span.date= @helpers.date page.releaseDate || _.last(page.revisions).date
